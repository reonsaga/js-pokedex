<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/header") %>
</head>

<body class="bg-gray-100 text-gray-800">
    <div class="relative min-h-screen flex justify-center items-center bg-red-500">
        <!-- Pok√©dex Image Wrapper -->
        <div class="absolute inset-0 bg-cover bg-center bg-no-repeat w-full h-full"
            style="background-image: url('/images/pokedex.jpg');"></div>

        <div class="relative bg-white bg-opacity-90 p-6 rounded-lg shadow-lg max-w-4xl w-full">
            <h1 class="text-3xl font-bold text-center mb-5">Pok√©dex</h1>

            <!-- üîç Search Form -->
            <form action="/search" method="GET" class="flex justify-center mb-5">
                <input type="text" name="name" placeholder="Search Pok√©mon..."
                    class="px-4 py-2 border rounded-l-lg focus:outline-none">
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-r-lg">Search</button>
            </form>

            <!-- Pok√©mon List -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <% pokemonList.forEach(pokemon=> { %>
                    <a href="/pokemon/<%= pokemon.name %>"
                        class="p-4 bg-white shadow rounded-lg text-center hover:shadow-xl">
                        <p class="text-xl capitalize font-semibold">
                            <%= pokemon.name %>
                        </p>
                    </a>
                    <% }); %>
            </div>
        </div>
    </div>
    <%- include("../partials/footer") %>
</body>

</html>