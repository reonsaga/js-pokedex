<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/header") %>
</head>

<body class="bg-gray-100 text-gray-800 h-screen relative">
    <!-- Pokedex BG -->
    <div class="absolute inset-0 bg-cover bg-center bg-no-repeat" style="background-image: url('/images/pokedex.jpg');">
    </div>

    <!-- Pokemon Thingies -->
    <div class="relative flex items-center justify-center h-full">
        <div class="bg-white bg-opacity-90 p-6 rounded-lg shadow-lg max-w-2xl w-full text-center">
            <h1 class="text-3xl font-bold mb-5 capitalize">
                <%= pokemon.name %>
            </h1>
            <div class="flex flex-col items-center">
                <img src="<%= pokemon.sprites.front_default %>" alt="<%= pokemon.name %>" class="w-40 h-40" />
                <p class="text-lg font-semibold">Height: <%= pokemon.height %>
                </p>
                <p class="text-lg font-semibold">Weight: <%= pokemon.weight %>
                </p>
                <p class="text-lg font-semibold">
                    Type: <%= pokemon.types.map(t=> t.type.name).join(', ') %>
                </p>
            </div>
            <div class="mt-5">
                <a href="/" class="px-4 py-2 bg-blue-500 text-white rounded-lg">Back</a>
            </div>
        </div>
    </div>

    <%- include("../partials/footer") %>
</body>


</html>